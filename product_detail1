			function hover(a)
            {
              
       	    main_img.setAttribute('src', ""); 
		var img=document.getElementById("main_img");
                if(a==1)
                {
                    main_img.setAttribute('src', "img/lenovoZ2_1.jpg");
                }
                else if(a==2)
                {
                    main_img.setAttribute('src', "img/lenovoZ2_2.jpg");
                }
                else if(a==3)
                    main_img.setAttribute('src', "img/lenovoZ2_3.jpg");
            }
		</script>
